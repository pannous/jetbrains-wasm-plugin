<idea-plugin package="com.intellij.webassembly">
  <id>com.jetbrains.webstorm.intellij-webassembly-plugin</id>
  <name>WebAssembly</name>
  <vendor>JetBrains</vendor>

  <dependencies>
    <plugin id="com.intellij.modules.lang"/>
  </dependencies>

  <description>
    <![CDATA[
    <p>Provides <a href="https://webassembly.org/">WebAssembly</a> language support to all JetBrains IDEs that <a href="https://www.jetbrains.com/products/#lang=js&type=ide">support JavaScript</a>.
<h2>Features</h2>
<ul>
  <li>Syntax highlighting for WAT, WAST, and WIT files
  <li>Brace matching, commenting, and code folding
  <li>Code completion
  <li>References and navigation
  <li>Bulk instructions and reference types support
  <li>WIT (WebAssembly Interface Type) syntax highlighting
</ul>

<h2>Getting started</h2>
<p>For information on getting started, head over to the <a href="https://www.jetbrains.com/help/">documentation</a> for your IDE.
For IntelliJ IDEA, you can check out this section in the <a href="https://www.jetbrains.com/help/idea/webassembly-project.html">documentation</a>.
        ]]>
  </description>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceImplementation="com.intellij.webassembly.lang.psi.WebAssemblyBinarySaveListener"/>

    <fileType name="WebAssembly file"
              implementationClass="com.intellij.webassembly.lang.psi.WebAssemblyFileType"
              fieldName="INSTANCE"
              language="WebAssembly"
              extensions="wat;wast"/>

    <!-- Binary WebAssembly (.wasm) files -->
    <fileType name="WebAssembly Binary"
              implementationClass="com.intellij.webassembly.lang.psi.WebAssemblyBinaryFileType"
              fieldName="INSTANCE"
              extensions="wasm"/>

    <fileEditorProvider implementation="com.intellij.webassembly.lang.psi.WebAssemblyBinaryFileEditorProvider"/>

    <!-- WIT (WebAssembly Interface Type) files -->
    <fileType name="WIT"
              implementationClass="com.intellij.webassembly.wit.WitElementTypes$WitFileType"
              fieldName="INSTANCE"
              language="WIT"
              extensions="wit"/>

    <lang.parserDefinition language="WebAssembly"
                           implementationClass="com.intellij.webassembly.lang.parser.WebAssemblyParserDefinition"/>

    <lang.syntaxHighlighterFactory language="WebAssembly"
                                   implementationClass="com.intellij.webassembly.ide.WebAssemblySyntaxHighlighterFactory"/>

    <!-- WIT language support -->
    <lang.parserDefinition language="WIT"
                           implementationClass="com.intellij.webassembly.wit.WitParserDefinition"/>

    <lang.syntaxHighlighterFactory language="WIT"
                                   implementationClass="com.intellij.webassembly.wit.WitSyntaxHighlighterFactory"/>

    <colorSettingsPage implementation="com.intellij.webassembly.ide.colors.WebAssemblyColorSettingPage"/>

    <!-- Matcher -->
    <lang.braceMatcher language="WebAssembly"
                       implementationClass="com.intellij.webassembly.ide.WebAssemblyBraceMatcher"/>

    <!-- Commenter -->
    <lang.commenter language="WebAssembly"
                    implementationClass="com.intellij.webassembly.lang.WebAssemblyCommenter"/>

    <!-- Folding -->
    <lang.foldingBuilder language="WebAssembly"
                         implementationClass="com.intellij.webassembly.lang.WebAssemblyFoldingBuilder"/>

    <!-- Completion -->
    <completion.contributor language="WebAssembly"
                            implementationClass="com.intellij.webassembly.lang.WebAssemblyKeywordCompletionContributor"/>

    <!-- Live Templates -->
    <defaultLiveTemplates file="/liveTemplates/WebAssembly.xml"/>
    <liveTemplateContext contextId="WebAssembly" implementation="com.intellij.webassembly.lang.WebAssemblyTemplateContextType"/>

    <!-- Run Configuration -->
    <configurationType implementation="com.intellij.webassembly.run.WebAssemblyRunConfigurationType"/>
    <runConfigurationProducer implementation="com.intellij.webassembly.run.WebAssemblyRunConfigurationProducer"/>
    <programRunner implementation="com.intellij.webassembly.run.WebAssemblyProgramRunner"/>

  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>
</idea-plugin>
